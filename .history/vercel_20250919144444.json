{
    "rewrites": [
        { "source": "/(.*)", "destination": "/" }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "Content-Security-Policy", "value": "default-src 'self'; img-src *; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';" },
                { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" },
                { "key": "X-Frame-Options", "value": "DENY" }
            ]
        }
    ]
}